inteiro n;
inteiro linha;
inteiro i;
inteiro C;
inteiro j; 

leia(n);

linha <- 0;
enquanto (linha < n) faca
    
    j <- 0;
    enquanto (j < n - linha - 1) faca
        escreva(" ");
        j <- j + 1;
    fimenquanto
 
    C <- 1; 
    i <- 0;
    enquanto (i <= linha) faca
        escreva(C); 
        C <- C * (linha - i) / (i + 1); 
        i <- i + 1;
    fimenquanto
    
    escreva("\n");
    linha <- linha + 1;
fimenquanto